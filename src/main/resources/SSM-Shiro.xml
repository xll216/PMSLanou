<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--启用shiro授权注解拦截-->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!--配置securityManager-->
        <property name="securityManager" ref="securityManager"/>

        <!--如果没有认证，需要跳转到的地址-->
        <property name="loginUrl" value="/login"/>

        <!--未授权的跳转界面-->
        <property name="unauthorizedUrl" value="/unauthorized"/>

        <!--自定义过滤器配置-->
        <property name="filters">
            <map>
                <entry key="authc" value-ref="formAuthenticationFilter"/>
            </map>
        </property>

        <property name="filterChainDefinitions">
            <value>
                <!--anon:代表资源可以匿名访问-->
                /static/**=anon

                <!--authc：需要认证才可以访问-->
                /loginsubmit=authc

                <!--退出-->
                /loginout=logout

                <!--必须要有管理员[admin]身份才可以访问-->
                <!--roles[xx]代表有xx角色才可以访问-->
                /role=authc,roles[admin]

                /perm/**=authc,perms["user:create"]

                /unauthorized=anon

                <!--user:通过了认证/通过rememberme认证通过可以访问-->
                /** = user


            </value>
        </property>

    </bean>

    <!--配置进行授权和认证的realm，需要自定义-->
    <bean id="userRealm" class="com.lanou.shiro.UserRealm"/>


    <!--配置SecurityManager-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <!--提供自定义的realm-->
        <property name="realm" ref="userRealm"/>
    </bean>

    <!--配置表单认证，可以配置页可以不配置，如果不配置，需要自己实现Subject.login代码-->
    <bean id="formAuthenticationFilter"
          class="org.apache.shiro.web.filter.authc.FormAuthenticationFilter">
        <!--表单中的用户名和密码属性名，即表单中账号、密码的input的name-->
        <property name="usernameParam" value="username"/>
        <property name="passwordParam" value="password"/>

        <!--配置用户登录地址，仅限认证使用，表单提交的地址-->
        <property name="loginUrl" value="/loginsubmit"/>

    </bean>
</beans>